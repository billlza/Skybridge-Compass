# SkyBridge signaling production environment template.
#
# Deployment convention used by deploy scripts:
#   /opt/skybridge-signaling/shared/config/production.env
#
# Copy this file and fill values before first deployment.

NODE_ENV=production
HOST=127.0.0.1
PORT=8443
TRUST_PROXY=true
ALLOW_INSECURE=false
JSON_LIMIT=1mb

CODE_LEN=8
CODE_TTL_MS=300000
SWEEP_INTERVAL_MS=10000
ICE_TTL_MS=1800000
ICE_MAX_PER_SESSION=200

WS_MAX_MSG_BYTES=65536
WS_MAX_MSGS_PER_10S=200
WS_MAX_CLIENTS_PER_ROOM=4

# Comma-separated allow-list for browser origins. Keep empty for native-app only.
CORS_ORIGIN=

# TURN credential endpoint auth and credential generation.
TURN_ENFORCE_API_KEY=true
TURN_CLIENT_API_KEY=skybridge-client-v1
TURN_CRED_TTL_SECONDS=3600
TURN_URIS=turn:54.92.79.99:3478

# Preferred mode: short-lived credentials from shared secret.
# If this is set, TURN_USERNAME/TURN_PASSWORD are ignored.
TURN_SHARED_SECRET=

# Fallback mode: static credentials (only if shared secret mode is unavailable).
TURN_USERNAME=
TURN_PASSWORD=

# Optional Node HTTPS (normally disabled when using Nginx TLS termination).
TLS_CERT=
TLS_KEY=
TLS_CA=
